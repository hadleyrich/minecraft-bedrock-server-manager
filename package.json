{
  "name": "itzgbedrock-server-manager",
  "version": "1.0.0",
  "description": "Minecraft Bedrock Server Manager with Docker support using itzg/bedrock image",
  "main": "server.js",
  "scripts": {
    "start": "npm run build:assets && node server.js",
    "dev": "nodemon server.js",
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./public/output.css --watch",
    "build:css:prod": "npx @tailwindcss/cli -i ./src/styles.css -o ./public/output.css --minify",
    "build:assets": "npm run build:css:prod && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "adm-zip": "^0.5.10",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "fs-extra": "^11.1.1",
    "multer": "^2.0.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "sweetalert2": "^11.10.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "overrides": {
    "glob": "^13.0.0"
  }
}